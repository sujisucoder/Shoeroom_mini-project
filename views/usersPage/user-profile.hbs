{{!-- profile-view --}}
<main class="p-5">

    <div class="container lg:w-2/3 xl:w-2/3 mx-auto">




        <div class="grid grid-cols-1 bg-gray-200 sm:grid-cols-5 p-8  items-start gap-6">


            {{!-- ikjkj --}}
            <div class="col-span-2 bg-white p-4 rounded-lg shadow">
                <h2 class="text-2xl font-extrabold mb-5">Your Account</h2>
                <div class="mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class=" w-40 h-40" viewBox="0 0 24 24" fill="currentColor"
                        class="w-6 h-6">
                        <path fill-rule="evenodd"
                            d="M18.685 19.097A9.723 9.723 0 0021.75 12c0-5.385-4.365-9.75-9.75-9.75S2.25 6.615 2.25 12a9.723 9.723 0 003.065 7.097A9.716 9.716 0 0012 21.75a9.716 9.716 0 006.685-2.653zm-12.54-1.285A7.486 7.486 0 0112 15a7.486 7.486 0 015.855 2.812A8.224 8.224 0 0112 20.25a8.224 8.224 0 01-5.855-2.438zM15.75 9a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z"
                            clip-rule="evenodd" />
                    </svg>

                    <h1>{{user.name}}</h1>

                </div>
                <div class="mb-4">
                    <h1>{{user.email}}</h1>
                </div>


            </div>


            <div class="col-span-3  bg-red-200 p-4 rounded-lg shadow">
                <!-- Profile Details -->
                <div class="mb-4">
                    <h2 class="text-2xl font-extrabold mb-5">Your Profile</h2>
                    <div class="mb-4">
                        <h1>{{user.name}}</h1>
                    </div>
                    <div class="mb-4">
                        <h1>{{user.email}}</h1>
                    </div>
                    <div class="mb-4">
                        <h1>{{user.number}}</h1>
                    </div>
                </div>
                <hr>
                <!--/ Profile Details -->

                <div class="grid place-items-center p-8">
                    <a href="/add-address">
                        <button
                            class="btn-primary bg-black hover:bg-gray-700 rounded-3xl py-3 px-5 text-white active:bg-gray-500">
                            Add
                            address
                        </button>
                    </a>
                </div>

                {{!-- address card --}}
                <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-1   gap-4 ">
                    {{#each getAddress}}
                  
                    <div class="flex  justify-center">
                      
                        <div class="block f p-6 rounded-lg shadow-lg bg-white max-w-sm">
                             
                             <div class=" flex justify-end">
                                <a class=" text-red-600" href="/remove-address/{{this._id}}">Remove</a>
                                 {{!-- <a href="/cart">  --}}
                                 {{!-- Remove   --}}
                                {{!-- </a>  --}}
                                </div>
                              
                           {{#if this.default}}
                             <h3 class="py-2 font-semibold text-green-600">default</h3>
                             {{/if}} 

                            <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">
                                {{this.firstName}}{{this.lastName }}
                            </h5>

                            <p class="text-gray-700 text-base mb-4">
                                {{this.phone}}
                            </p>
                            <p class="text-gray-700 text-base mb-4">
                                {{this.email}}
                            </p>
                            <p class="text-gray-700 text-base mb-4">
                                {{this.areaStreet}}
                            </p>
                            <p class="text-gray-700 text-base mb-4">
                                {{this.pincode}}
                            </p>


                            <div class="flex flex-row  ">

                                {{#if this.default}}
                                {{else}}
                                <a href="/add-default-address/{{this._id}}">
                                    <button type="button"
                                        class=" m-4  px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">set
                                        default</button>
                                </a>
                                {{/if}}
    
                                <a href="/update-profile/{{this._id}}">
                                    <button type="button"
                                        class=" m-4 px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out">
                                        update </button>
                                </a>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{!-- /address card --}}

                








            </div>
        </div>
    </div>

    {{!--e profile-view --}}


