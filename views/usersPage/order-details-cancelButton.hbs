<h2 class=" text-xl p-4 text-center font-bold mb-5">Order Details</h2>
<table class="w-full border border-gray-300">
    <thead class="bg-gray-200">
        <tr>
            <th class="px-4 py-2 border border-gray-300">Shipping Address</th>
            <th class="px-4 py-2 border border-gray-300">Action</th>
        </tr>
    </thead>
    <tbody>
        <tr class="bg-white">
            <td class="px-4   py-2 border border-gray-300">
                <div class="text-center">{{address.address}}</div> <br>
                <div class="text-center">{{address.pincode}}</div>

            </td>

            <td class="px-4 text-center   py-2 border border-gray-300">
                {{#if orderCancel}}
                <p>order cancelled</p>
                {{else}}
                <a href="/cancel-order/{{orderId}}">
                    <button class="  bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600">
                        Cancel Order
                    </button>
                </a>
                {{/if}}
            </td>



        </tr>
    </tbody>
</table>
<table class="min-w-full text-center   ">
    <thead class="border-b bg-gray-50">
        <tr>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                Image
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                Name
            </th>
            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                Quantity
            </th>


        </tr>
    </thead class="border-b">
    <tbody>
        {{#each products}}
        <tr class="bg-white border-b">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <img class=" w-60 h-30" src="/product-image1/{{this.product._id}}.jpg" alt="">
            </td>

            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                {{this.product.model_name}}</td>
            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                {{this.quantity}}
            </td>



        </tr class="bg-white border-b">
        {{/each}}
    </tbody>
</table>