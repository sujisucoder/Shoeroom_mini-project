<div class="flex flex-col overflow-hidden">
    <div class="overflow-x-auto sm:-mx-6 lg:mx-10">
        <div class=" m-10   inline-block w-5/6 sm:px-8 lg: px-8">
            <div class="   ">

                <div class="text-center text-3xl mb-6 font-bold">
                    <h1>Sales Report</h1>

                </div>



                <table id="table_id" class="min-w-full text-center m-8 ">
                    <thead class="border-b bg-gray-50">
                        <tr>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                                Order date
                            </th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                                OrderId
                            </th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                                Name
                            </th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                                Payment-method
                            </th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                                status
                            </th>
                            <th scope="col" class="text-sm font-medium text-gray-900 px-6 py-4">
                                Total
                            </th>

                        </tr>
                    </thead class="border-b">

                    <tbody>
                        {{#each salesReport}}
                        <tr class="bg-white border-b">


                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">{{this.date}}</td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{this._id}}
                            </td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                {{this.deliveryDetails.email}}
                            </td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                {{this.paymentMethod}}
                            </td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">{{this.status}}
                            </td>
                            <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap">
                                {{this.totalAmount}}
                            </td>

                        </tr class="bg-white border-b">
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#table_id').DataTable();
    });
</script>